{
  "tool": "opencode",
  "theme_dir_rel": "ports/opencode/themes",
  "theme_ext": ".json",
  "output_path_template": "ports/opencode/themes/{theme}.json",
  "mapping_path": "mappings/opencode/default.json",
  "template_path": "ports/opencode/theme.tmpl",
  "template_format": "mini",
  "validate_json": true,
  "required_fields": [
    "$schema",
    "theme",
    "theme.primary",
    "theme.secondary",
    "theme.accent",
    "theme.error",
    "theme.warning",
    "theme.success",
    "theme.info",
    "theme.text",
    "theme.textMuted",
    "theme.background",
    "theme.backgroundPanel",
    "theme.backgroundElement",
    "theme.border",
    "theme.borderActive",
    "theme.borderSubtle",
    "theme.diffAdded",
    "theme.diffRemoved",
    "theme.diffContext",
    "theme.diffHunkHeader",
    "theme.diffHighlightAdded",
    "theme.diffHighlightRemoved",
    "theme.diffAddedBg",
    "theme.diffRemovedBg",
    "theme.diffContextBg",
    "theme.diffLineNumber",
    "theme.diffAddedLineNumberBg",
    "theme.diffRemovedLineNumberBg",
    "theme.markdownText",
    "theme.markdownHeading",
    "theme.markdownLink",
    "theme.markdownLinkText",
    "theme.markdownCode",
    "theme.markdownBlockQuote",
    "theme.markdownEmph",
    "theme.markdownStrong",
    "theme.markdownHorizontalRule",
    "theme.markdownListItem",
    "theme.markdownListEnumeration",
    "theme.markdownImage",
    "theme.markdownImageText",
    "theme.markdownCodeBlock",
    "theme.syntaxComment",
    "theme.syntaxKeyword",
    "theme.syntaxFunction",
    "theme.syntaxVariable",
    "theme.syntaxString",
    "theme.syntaxNumber",
    "theme.syntaxType",
    "theme.syntaxOperator",
    "theme.syntaxPunctuation"
  ],
  "required_keys": [],
  "install_targets": [
    "$XDG_CONFIG_HOME/opencode/themes",
    "$HOME/.config/opencode/themes"
  ],
  "config_locations": [
    "$XDG_CONFIG_HOME/opencode/opencode.json",
    "$HOME/.config/opencode/opencode.json"
  ]
}
