{
  "tool": "pi",
  "theme_dir_rel": "ports/pi/themes",
  "theme_ext": ".json",
  "output_path_template": "ports/pi/themes/{theme}.json",
  "mapping_path": "mappings/pi/default.json",
  "template_path": "ports/pi/theme.tmpl",
  "template_format": "mini",
  "validate_json": true,
  "required_fields": [
    "$schema",
    "name",
    "colors",
    "colors.accent",
    "colors.border",
    "colors.borderAccent",
    "colors.borderMuted",
    "colors.success",
    "colors.error",
    "colors.warning",
    "colors.muted",
    "colors.dim",
    "colors.text",
    "colors.thinkingText",
    "colors.selectedBg",
    "colors.userMessageBg",
    "colors.userMessageText",
    "colors.customMessageBg",
    "colors.customMessageText",
    "colors.customMessageLabel",
    "colors.toolPendingBg",
    "colors.toolSuccessBg",
    "colors.toolErrorBg",
    "colors.toolTitle",
    "colors.toolOutput",
    "colors.mdHeading",
    "colors.mdLink",
    "colors.mdLinkUrl",
    "colors.mdCode",
    "colors.mdCodeBlock",
    "colors.mdCodeBlockBorder",
    "colors.mdQuote",
    "colors.mdQuoteBorder",
    "colors.mdHr",
    "colors.mdListBullet",
    "colors.toolDiffAdded",
    "colors.toolDiffRemoved",
    "colors.toolDiffContext",
    "colors.syntaxComment",
    "colors.syntaxKeyword",
    "colors.syntaxFunction",
    "colors.syntaxVariable",
    "colors.syntaxString",
    "colors.syntaxNumber",
    "colors.syntaxType",
    "colors.syntaxOperator",
    "colors.syntaxPunctuation",
    "colors.thinkingOff",
    "colors.thinkingMinimal",
    "colors.thinkingLow",
    "colors.thinkingMedium",
    "colors.thinkingHigh",
    "colors.thinkingXhigh",
    "colors.bashMode"
  ],
  "required_keys": [],
  "install_targets": [
    "$HOME/.pi/agent/themes"
  ],
  "config_locations": [
    "$HOME/.pi/agent/settings.json",
    ".pi/settings.json"
  ]
}
