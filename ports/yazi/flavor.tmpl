separator_style = { fg = "{color:fg-dim}" }

[help]
on = { fg = "{color:green}" }
run = { fg = "{color:magenta}" }
hovered = { reversed = true, bold = true }
footer = { fg = "{color:fg-dim}", bg = "{color:bg-dim}" }

[spot]
border = { fg = "{color:border}" }
title = { fg = "{color:fg-main}" }
