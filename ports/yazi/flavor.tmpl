[notify]
title_info = { fg = "{color:blue}" }
title_warn = { fg = "{color:yellow}" }
title_error = { fg = "{color:red}" }

[filetype]
rules = [
  { mime = "image/*", fg = "{color:magenta-warmer}" },
  { mime = "{audio,video}/*", fg = "{color:magenta}" },
  { mime = "application/{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*}", fg = "{color:cyan}" },
  { mime = "application/{pdf,doc,rtf}", fg = "{color:red}" },
  { mime = "vfs/{absent,stale}", fg = "{color:fg-dim}" },
  { url = "*", fg = "{color:fg-main}" },
  { url = "*/", fg = "{color:blue}" },
]

