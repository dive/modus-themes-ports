select_main = { fg = "{color:fg-main}", bg = "{color:bg-active}" }
select_alt  = { fg = "{color:fg-dim}" }
unset_main  = { fg = "{color:fg-main}" }
unset_alt   = { fg = "{color:fg-dim}" }

[status]
overall = { fg = "{color:fg-main}", bg = "{color:bg-dim}" }
perm_type = { fg = "{color:blue}" }
perm_read = { fg = "{color:green}" }
perm_write = { fg = "{color:yellow}" }
perm_exec = { fg = "{color:red-faint}" }
