[app]
overall = { bg = "{color:bg-main}" }

[mgr]
cwd = { fg = "{color:blue}" }
border_style = { fg = "{color:border}" }
marker_selected = { fg = "{color:fg-main}", bg = "{color:bg-active}", bold = true }
marker_marked = { fg = "{color:magenta}", bold = true }
count_selected = { fg = "{color:fg-main}", bg = "{color:bg-active}" }
find_keyword = { fg = "{color:yellow}", bold = true }
find_position = { fg = "{color:fg-alt}" }

[indicator]
parent = { fg = "{color:fg-dim}" }
current = { fg = "{color:fg-main}", bg = "{color:bg-active}" }
preview = { fg = "{color:fg-dim}", bg = "{color:bg-dim}" }
